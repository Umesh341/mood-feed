<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
    <link rel="stylesheet" href="style/index.css">
    <script src="https://unpkg.com/timeago.js@4.0.2/dist/timeago.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

</head>

<body>
    <%- include('partials/nav', {user: token}) %>

        <div class="wrap">


            <div class="Posts">

                <% if( !token ) {%>
                    <a href="/login" class="post"
                        style="color: rgb(0, 0, 0); padding: 20px; margin-bottom: 50px; text-decoration: none;"> login
                        to write the status</a>
                    <% } %>

                        <% if(!posts.length) { %>
                            <div class="post">
                                <p class="content"> No posts yet. </p>


                            </div>
                            <% }else{ posts.reverse().forEach(post=> { %>
                                <div class="post">
                                    <h3>
                                        <%= post.user.username %>
                                    </h3>

                                    <p class="content">
                                        <%= post.content %>
                                           
                                    </p>
                                    <small>
                                        <span style="color:rgb(110, 108, 108);" class="timeago"
                                            datetime="<%= post.date %>"></span></small> <br>
                                    <!-- <form action="/api/like" method="post">
                                        <input type="submit" value="" id="actsubmit" style="display:none;">
                                        <input type="hidden" name="post_id" value="<%= post._id %>">
                                        <%= post._id %> -->
                                        <% if( post.user.toString() == token._id ) %>
                             <i class="fa-solid fa-thumbs-up like-btn" data-post-id="<%= post._id%>" style="cursor: pointer;"></i>
                                        <% const count = post.likes.length; %>
<span class="like-count"><%= count %></span>
                             
                                        <!-- </input>
                                           
                                    </form> -->

                                </div>
                                <% } )}%>

            </div>
        </div>

        <script>
            // Initialize live updating
            timeago.render(document.querySelectorAll('.timeago'));

            document.querySelectorAll('.like-btn').forEach(btn => {
                btn.addEventListener('click', async () => {
                    const postId = btn.dataset.postId;
                    // console.log('Clicked post:', postId);

                    const response = await fetch('/api/like', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ post_id: postId })
                    });
                     window.location.reload();
                });
            });



        </script>
</body>

</html>